(defwidget volume_osd []
  (revealer 
    :transition "slideup" 
    :reveal {open_osd == true ? true : false} 
    :duration {ANIM_DURATION}
    (box 
      :orientation "h" 
      :class "volume-osd" 
      :space-evenly false
      (volume_scale)
    )
  )
)

(defwidget volume_scale []
  (overlay 
    :hexpand true 
    (scale
      :min 0 
      :max 100 
      :active {volume != "muted"} 
      :value {volume == "muted" ? 0 : volume} 
      :onchange "pamixer --set-volume {}" 
      :class "volume-scale"
    )
    (label 
      :class 'volume-icon ${volume == "muted" ? "less" : volume < 5 ? "less" : "more"}' 
      :halign "start"
      :text {volume == "muted" ? "󰸈" : volume < 25 ? "" : volume < 35 ? "" : volume < 65 ? "󰕾" : ""}
    )
  )
)
